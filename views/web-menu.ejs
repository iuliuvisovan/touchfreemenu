<html translate="no">
  <head>
    <meta charset="utf-8" />
    <title>Meniu | <%- restaurant.name %></title>
    <link rel="icon" href="img/logo-medium.png" type="image/png" sizes="16x16" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="css/styles.css?rndstr=<%= +new Date() %>" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;700;900&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/2f166c40b2.js" crossorigin="anonymous"></script>
  </head>

  <body onscroll="hideKeyboard(event)">
    <div class="menu">
      <div class="cover-wrapper">
        <img class="cover-photo" src="<%- restaurant.coverPhotoUrl %>" />
        <div class="bottom-gradient"></div>
        <div class="restaurant-logo-wrapper">
          <div class="inner">
            <img src="<%- restaurant.logoUrl %>" alt="Restaurant Logo" class="restaurant-logo" />
          </div>
        </div>
        <h1 class="title"><%- restaurant.name %></h1>
        <h2 language="RO" class="subtitle">Meniu</h2>
        <h2 language="EN" class="subtitle">Menu</h2>
        <div class="language-picker">
          <span onclick="toggleLanguage()" language="RO">ðŸ‡·ðŸ‡´</span>
          <span onclick="toggleLanguage()" language="EN">ðŸ‡¬ðŸ‡§</span>
        </div>
      </div>
      <div class="search-wrapper">
        <div class="search-icon">
          <i class="fas fa-search"></i>
        </div>
        <input onkeyup="search(this.value)" onfocus="scrollToInput()" type="text" language="RO" placeholder="CautÄƒ" />
        <input onkeyup="search(this.value)" onfocus="scrollToInput()" type="text" language="EN" placeholder="Search" />
        <div onclick="clearInput()" id="clearButton" class="clear-icon">
          <i class="fas fa-times"></i>
        </div>
      </div>
      <div class="products-wrapper">
        <% restaurant.categories.forEach(function(category) { %>
        <div class="category">
          <div language="RO" class="category-label"><%- category.name %></div>
          <div language="EN" class="category-label"><%- category.nameEn %></div>
          <% category.products.forEach(function(product) { %>
          <div class="product">
            <% if(product.imageUrl) { %>
            <div class="expanded-photo">
              <img language="RO" src="<%- product.imageUrl %>" alt="<%- product.name %>" />
              <img language="EN" src="<%- product.imageUrl %>" alt="<%- product.nameEn %>" />
            </div>
            <% } %>
            <div class="content">
              <div language="RO" class="name"><%- product.name %></div>
              <div language="EN" class="name"><%- product.nameEn %></div>
              <% if(product.description?.length) { %>
              <div language="RO" class="description"><%- product.description[0].toUpperCase() + product.description.slice(1) %></div>
              <div language="EN" class="description"><%- product.descriptionEn[0].toUpperCase() + product.descriptionEn.slice(1) %></div>
              <% } %>
              <div class="weight"><%- product.quantities %></div>
              <div class="price <%- product.isDiscounted ? 'obsolete' : '' %>"><%- product.price %> RON</div>
              <% if(product.isDiscounted) { %>
              <div class="discounted-price"><%- product.discountedPrice %> RON</div>
              <% } %>
            </div>
            <% if(product.imageUrl) { %>
            <img class="photo collapsed" src="<%- product.imageUrl %>" alt="<%- product.name %>" />
            <% } %>
            <div class="gradient"></div>
          </div>
          <% }); %>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
  <script src="js/smoothscroll.js"></script>
  <script src="js/app.js?rndstr=<%= +new Date() %>"></script>
</html>

