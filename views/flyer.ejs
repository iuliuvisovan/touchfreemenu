        height: 148mm;
        font-size: 14px;
        position: relative;

        box-shadow: 1px 0px 6px 0px #3334;
      }

      .guide {
        position: absolute;
        width: 100vw;
        top: 0;
        bottom: 0;
        height: 0.1px;
        left: -50px;
        margin: auto;
        background: #f004;
      }

      .cover-image {
        width: 100%;
      }

      @media print {
        @page {
          size: 113mm 156mm;
        }
      }
